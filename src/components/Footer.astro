---
const data = [
        {
            title: "Consultations",
            links: [
                { title: "Voyance", url: `${import.meta.env.BASE_URL}/consultation-voyance` },
                { title: "Rituels et Coachings", url: `${import.meta.env.BASE_URL}/rituels-coachings` },
                { title: "Soins énergétiques", url: `${import.meta.env.BASE_URL}/soins-energetiques` },
            ]
        },
        {
            title: "A propos",
            links: [
                { title: "Portrait", url: `${import.meta.env.BASE_URL}/portrait` },
                { title: "Témoignages", url: `${import.meta.env.BASE_URL}/temoignages` },
                { title: "Presse", url: `${import.meta.env.BASE_URL}/presse` },
            ]
        },
        {
            title: "Relations publiques",
            links: [
                { title: "Consulting", url: `${import.meta.env.BASE_URL}/consulting` },
                { title: "Partenariats", url: `${import.meta.env.BASE_URL}/partenariats` },
                { title: "Contact", url: `${import.meta.env.BASE_URL}/contact` },
            ]
        },
    ]
---

<footer class="flex flex-col gap-8 w-full h-fit bg-black border-t border-white border-opacity-40 text-dark dark:text-white place-content-center">
    <div class="grid grid-cols-1 lg:grid-cols-3 sm:flex-row gap-8 w-full max-w-[1300px] self-center h-fit justify-evenly p-8">
        {
            data.map((section, index) => (
                <div class="flex flex-col size-full">
                    <div class="flex text-center w-full text-white text-xl font-bold uppercase whitespace-nowrap">{section.title}</div>
                    {
                        section.links.map((link, index) => (
                            <a class="flex w-fit whitespace-nowrap text-white text-opacity-50 cursor-pointer no-underline hover:text-white" href={link.url}>{link.title}</a>
                        ))
                    }
                </div>
            ))
        }
    </div>
    <div class="flex flex-col lg:flex-row gap-4 lg:gap-20 pb-16 items-center place-content-center p-2 w-fit px-16 self-center border-t border-white border-opacity-40 text-center text-xs text-opacity-70 whitespace-nowrap justify-evenly">
        {
            [
                { title: "Copyright © 2024 NicolasAbry.", url: "#" },
                //{ title: "CGU", url: "#" },
                { title: "CGV", url: "#" },
                { title: "Mentions légales", url: `${import.meta.env.BASE_URL}/registre.pdf` }
            ].map((link, index) => (
                <a class="flex w-fit whitespace-nowrap text-white text-opacity-50 cursor-pointer no-underline hover:text-white" href={link.url}>{link.title}</a>
            ))

        }
    </div>
</footer>
